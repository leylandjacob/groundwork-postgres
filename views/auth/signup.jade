extends ../layout
block content
	.h-xs-100.container.text-center
		.v-center-xs.row
			.col.col-sm-8.offset-sm-2.col-md-6.offset-md-3.col-lg-4.offset-lg-4
				p Sign Up
				form(id="signup", action="/signup", method="POST", data-redirect=redirect ? redirect : '/')
					.form-group
						label.sr-only( for='email' ) Email Address
						input.form-control(type='email', id='email', name="email", placeholder='email address')
					.form-group
						label.sr-only( for='password' ) Password
						input.form-control(type='password', id='password', name="password", placeholder='password')
					.form-group
						button.trigger-signup.btn.btn-primary.btn-loading.btn-block(type="submit",)
							span.btn-loading-text Sign Up
				br
				.font--sm-1 
					| Already have an account? 
					a(href="/login", title="Log In") Log In