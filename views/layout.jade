doctype html
html
	head
		include ./blocks/meta
			
		if config.environment === 'local'
			script(src="//localhost:35729/livereload.js")
			
		link(rel='stylesheet', href='/stylesheets/style.css')
		
		script(type='text/javascript', src="/node_modules/tether/dist/js/tether.min.js")

		if config.production
			script(type="text/javascript", src='/javascripts/require.js')
		else
			script(data-main='/javascripts/main.js', src='/javascripts/require.js')

		script(type='text/javascript').
			define('config', !{JSON.stringify(config)});

		script(type='text/javascript').
			define('data', !{JSON.stringify(data)});
	body
		block header
			include ./blocks/header
				
		block content
			
		block footer
			include ./blocks/footer
				
		block alerts
			include blocks/alerts
				
		block tracking
			include ./blocks/tracking
	
	if config.production
		script(type="text/javascript", src='/javascripts/main-built.js')